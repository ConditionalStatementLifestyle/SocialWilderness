<div class="container-fluid">
<b><h1>Destination: <%= @destination.name %></h1><b>

<%= form_tag @destination %>
<%=label_tag(@destination.description)%><br><br>

<a href="<%=@destination.location_url%>" class="card-link">Location</a>
<a href="<%=@destination.booking_url%>" class="card-link">Book now</a>

</div>
<body>

<div class="new-box col-5">


  <h2>User Reviews</h2>

  <% @destination.reviews.each do |review| %>
      <div>
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><p><b><%= review.title %></h4>
            <h6 class="card-subtitle mb-2 text-muted">By: <%= link_to review.user.name, user_path(review.user_id) %></h6>
            <p class="card-text">
              <%= review.content %>
            </p>
          </div>
        </div>
      </div><br>
  <% end %>
  </div>

  </body>
