<div class="new-box">
  <div class="col-4 offset-4 text-center">
    <h2>All Destinations</h2>

    <h5>Search by Destination Name</h5>
      <%= form_tag('/destinations/search', method: "get") do %>
        <%= text_field_tag :search %>
        <%= submit_tag "Search" %><br>
        <small><b><i>Spelling and Capitalization Sensitive</i></b></small>
      <% end %>
  </div>
</div>
      <% @destinations.each do |destination| %><br>
        <div class="col-6 offset-3">
          <div class="card bg-dark text-light">
            <div class="card-body">
              <h4 class="card-title">
                <a href="<%=destination_path(destination.id)%>" style="color: white"><%=destination.name%></a></h4>
              <p class="card-text">
                <%= destination.description %>
              </p>
              <a href="<%=destination.location_url%>" class="btn btn-success">Location</a>
              <a href="<%=destination.booking_url%>" class="btn btn-success">Book now</a>
            </div>
          </div>
        </div>
      <% end %>

      <br><br><br><br><br><br>
