<h1>User Search Results</h1>
<% if @user == nil %>
  <h3>Invalid Search - User Not Found</h3>
<% else %>
  <% if current_user %>
    <h3><%= link_to @user.name, "/users/#{@user.id}/profile" %></h3>
  <% else %>
    <h3><%= link_to @user.name, @user %></h3>
  <% end %>
<% end %>
<%= link_to "Go Back", users_path %>
