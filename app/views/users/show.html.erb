<h1>User:</h1>

<%= form_tag @user %>
<%=label_tag(@user.name)%><br><br>
<%=label_tag(@user.age)%><br><br>
<%=label_tag(@user.description)%><br><br>
<%=label_tag(@user.image_url)%>
<ul>
  <h3><%= @user.name %>'s Trips</h3>
  <%@user.trips.each do |trip| %>
  <p><li><%=trip.title %> - <%= link_to trip.destination.name, destination_path(trip.destination_id) %></li></p>
  <% end %>
</ul>

<ul>
  <h3><%= @user.name %>'s Reviews</h3>
  <%@user.reviews.each do |review| %>
  <p><li><b><%=review.title %></b>: <%= review.content %></li></p>
  <% end %>
</ul>
