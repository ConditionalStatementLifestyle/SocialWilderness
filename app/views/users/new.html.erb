<br>
<div class= "new-box col-4 offset-4 card text-center">
  <% if flash[:errors] %> 
    <% flash[:errors].each do |error| %> 
      <li><%= error %></li> 
    <% end %>
   <% end %>

  <h2>Create New User</h2>
    <%= form_for @user do |f|%>
      <h4><%= f.label :name %></h4>
        <p><%= f.text_field :name %></p>
      <h4><%= f.label :age %></h4>
        <p><%= f.number_field :age%></p>
      <h4><%= f.label :description, "Short Bio" %></h4>
        <p><%= f.text_area :description %></p>
      <h4><%= f.label :image_url, "Image Url"%></h4>
        <p><%= f.text_field :image_url %></p>
      <h4><%= f.label :email %></h4>
        <p><%= f.text_field :email %></p>
      <h4><%= f.label :password %></h4>
        <p><%= f.password_field :password %></p>
      <h4><%= f.label :password_confirmation, "Confirm Password" %></h4>
        <p><%= f.password_field :password_confirmation %></p>
      <%= f.submit %>
    <% end %>
</div>
