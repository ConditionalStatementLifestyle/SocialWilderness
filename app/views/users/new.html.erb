<h1>Create a new user:</h1>

<%= form_for @user do |f|%>
  <h4><%= f.label :name %></h4>
  <%= f.text_field :name %><br>
  <h4><%= f.label :age %></h4>
  <%= f.number_field :age%><br>
  <h4><%= f.label :description, "Short Bio" %></h4>
  <%= f.text_area :description %><br>
  <h4><%= f.label :image_url, "Upload Image"%></h4>
  <%= f.text_field :image_url %><br><br>
  <h4><%= f.label :email %></h4>
  <%= f.text_field :email %>
  <h4><%= f.label :password %></h4>
  <%= f.password_field :password %>
  <h4><%= f.label :password_confirmation %></h4>
  <%= f.password_field :password_confirmation %>
  <%= f.submit %>
<% end %>
